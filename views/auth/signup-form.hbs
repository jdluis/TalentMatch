<div class="flex min-h-screen items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-green-600">
  <div class="w-full max-w-md space-y-8">
    <div>
      <img class="mx-auto h-16 w-auto rounded-lg" src="/images/logoTalentMatch.png" alt="Logo Company">
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-white">Sign up</h2>
      
    </div>
    <form class="mt-8 space-y-6" action="/auth/signup" method="POST">
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="email-address" name="email" type="email" autocomplete="email" class="relative block w-full appearance-none rounded-none rounded-t-md border border-gray-300 px-3 py-2 text-white placeholder-white sm:text-sm bg-green-600 focus:outline-none" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="password" type="password" autocomplete="current-password" class="relative block w-full appearance-none rounded-none border border-gray-300 px-3 py-2 text-white placeholder-white focus:z-10 sm:text-sm bg-green-600 focus:outline-none" placeholder="Password">
        </div>
        <div>
          <label for="passwordCheck" class="sr-only">Password</label>
          <input id="passwordCheck" name="passwordCheck" type="password" class="relative block w-full appearance-none rounded-none rounded-b-md border border-gray-300 px-3 py-2 text-white placeholder-white focus:z-10 sm:text-sm bg-green-600 focus:outline-none" placeholder="Repeat Password">
        </div>
      </div>

      <div class="flex items-center justify-evenly">
        <div class="flex items-center">
          <input id="developer" name="role" type="radio" value="dev" class="h-4 w-4 rounded border-gray-300">
          <label for="developer" class="ml-2 block text-sm text-white">Developer</label>
        </div>

        <div class="flex items-center">
          <input id="company" name="role" type="radio" value="company" class="h-4 w-4 rounded border-gray-300">
          <label for="company" class="ml-2 block text-sm text-white">Company</label>
        </div>
      </div>
      <div>
        <p class="text-center text-red-800 font-bold">{{errorMsg}}</p>
      </div>
      <div>
        <button class="group relative flex w-full justify-center rounded-md border border-transparent bg-white py-2 px-4 text-sm font-medium text-green-600 focus:outline-none mb-10">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 wx-16">
            <svg class="h-5 w-5 text-green-600 group-hover:text-indigo-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
            </svg>
          </span>
          Sign in
        </button>
      </div>
      <p class="mt-2 text-gray-700 text-center">Already have an account? <a class="text-white" href="/auth/login">Login</a></p>
    </form>
  </div>
</div>
