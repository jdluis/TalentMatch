<div>
  <form action="" method="post">
    <div>
      <h3>Register by:</h3>
      <div>
        <label for="role-dev">Dev</label>
        <input
          placeholder="dev"
          value="dev"
          type="radio"
          name="role"
          id="role-dev"
        />
        <label for="role-company">Company</label>
        <input
          placeholder="company"
          value="company"
          type="radio"
          name="role"
          id="role-company"
        />
      </div>
    </div>
    <div>
      <label for="email">Email</label>
      <input placeholder="Enter your email" type="text" name="email" />
    </div>
    <div>
      <label for="password">Password</label>
      <input type="password" name="password" />
    </div>
    <div>
    </div>
    <button>Login</button>
    <div>
      {{errorMsg}}
    </div>
  </form>

</div>