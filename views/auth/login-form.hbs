<div class="flex min-h-full items-center justify-evenly py-12 px-4 sm:px-6 lg:px-8 h-screen">
  <div class="w-full max-w-md space-y-8">
    <div>
      <img class="mx-auto h-16 w-auto rounded-lg" src="/images/logoTalentMatch.png" alt="Your Company">
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-green-600">Login to your account</h2>
    </div>

    <form class="mt-8 space-y-6" action="/auth/login" method="POST">
      <input type="hidden" name="remember" value="true">
      <div class="-space-y-px rounded-md shadow-sm">
        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="email-address" name="email" type="email" autocomplete="email" class="relative block w-full appearance-none rounded-none rounded-t-md border border-green-600 px-3 py-2 text-gray-900 placeholder-green-600 focus:z-10 focus:outline-none focus:ring-indigo-100 sm:text-sm" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="password" type="password" autocomplete="current-password" class="relative block w-full appearance-none rounded-none rounded-b-md border border-green-600 px-3 py-2 text-gray-900 placeholder-green-600 focus:z-10 focus:outline-none focus:ring-indigo-100 sm:text-sm" placeholder="Password">
        </div>
      </div>

      <div>
        <button type="submit" class="group relative flex w-full justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white focus:outline-none focus:ring-2 active:ring focus:ring-offset-2 mb-10">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-white group-hover:text-indigo-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
            </svg>
          </span>
          Login
        </button>
      </div>
    </form>
  </div>
</div>