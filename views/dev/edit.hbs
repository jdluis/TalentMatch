<div class=" min-h-screen flex flex-col items-center my-12 mx-4">
    <div class="w-14 h-14 text-center">
        <img class="w-full h-full rounded-full border border-green-600" src="{{devUser.img}}" alt="{{devUser.name}}" />
    </div>
    <div class="mt-3">
        <h1 class="text-lg inline text-green-600">{{devUser.name}}{{devUSer.secondName}}</h1>
    </div>
    <form action="/dev/profile/edit" method="post" enctype="multipart/form-data">
        <div class="mt-6 w-full">
            <p class="text-gray-600 min-w-full border-b border-green-600">Edit Profile</p>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="img" class="text-green-600 mb-2">Image: </label>
                <input type="file" name="img" id="img">
                <input type="text" name="existingImage" hidden value="{{devUser.img}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="Name" class="text-green-600 mb-2">Name: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="name" id="name" value="{{devUser.name}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="SecondName" class="text-green-600 mb-2">Second Name: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="secondName" id="SecondName" value="{{devUser.secondName}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="email" class="text-green-600 mb-2">Email: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="email" id="email" value="{{devUser.email}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="telephone" class="text-green-600 mb-2">Telephone: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="Number" name="telephone" id="telephone" value="{{devUser.telephone}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="location" class="text-green-600 mb-2">Location: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="location" id="location" value="{{devUser.location}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="resume" class="text-green-600 mb-2">CVs: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="resume" id="resume" value="{{devUser.resume}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="linkedin" class="text-green-600 mb-2">Linkedin: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="linkedin" id="linkedin" value="{{devUser.linkedin}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="facebook" class="text-green-600 mb-2">Facebook: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="facebook" id="facebook" value="{{devUser.facebook}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="twitter" class="text-green-600 mb-2">Twitter: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="twitter" id="twitter" value="{{devUser.twitter}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap items-center">
                <label for="twitter" class="text-green-600 mb-2">Is currently working: </label>
                <input type="checkbox" name="isWorking" id="Yes" value="true">
                <label class="text-gray-600" for="Yes">Yes</label>
                <input type="checkbox" name="isWorking" id="No" value="false">
                <label class="text-gray-600 " for="No">No</label>
            </div>
            <div class="flex flex-col justify-between my-4 mx-2 flex-wrap">
                <p class="text-green-600 mb-2"><span>Tech Skills:</span></p>
                <ul class="flex flex-wrap gap-4">
                {{#each selectedTechSkills}}
                    <input type="checkbox" name="techSkills" id="{{this}}" value="{{this}}" checked>
                    <label class="text-gray-600" for="{{this}}">{{this}}</label>
                {{/each}}
                {{#each deselectedTechSkills}}
                    <input type="checkbox" name="techSkills" id="{{this}}" value="{{this}}">
                    <label class="text-gray-600" for="{{this}}">{{this}}</label>
                {{/each}}
                </ul>
            </div>
            <div class="flex flex-col justify-between my-4 mx-2 flex-wrap">
                <p class="text-green-600 mb-2"><span>Soft Skills:</span></p>
                <ul class="flex flex-wrap gap-4">
                    {{#each devUser.softSkills}}
                    <input type="checkbox" name="softSkillsChecked" value="{{this}}" checked>
                    <label class="text-gray-600" for="softSkills">{{this}}</label>
                {{/each}}
                </ul>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-grey-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="softSkills" id="softSkills" placeholder="Separate the Skills with ,">
            </div>
            <div class="flex flex-col justify-between my-4 mx-2 flex-wrap">
                <label class="text-green-600 mb-2" for="experience">Experience: </label>
                <textarea class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" name="experience" id="experience" cols="30" rows="10">{{devUser.experience}}</textarea>
            </div>
            <div class="flex flex-col justify-between my-4 mx-2 flex-wrap">
                <label class="text-green-600 mb-2" for="description">Description: </label>
                <textarea class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" name="description" id="description" cols="30" rows="10">{{devUser.description}}</textarea>
            </div>           
            <button class=" m-auto flex w-52  justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white focus:outline-none focus:ring-2 active:ring focus:ring-offset-2 mb-6 mt-6">Update Profile</button>
        </div>
    </form>
    <form action="/dev/profile/delete" method="get">
        <button class=" flex w-52 justify-center rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white focus:outline-none focus:ring-2 active:ring focus:ring-offset-2">Delete Account</button>
    </form>
</div>

<script>
    const isWorkingYes = document.getElementById("Yes");
    const isWorkingNo = document.getElementById("No");

    isWorkingYes.addEventListener("change", function() {
    if (isWorkingYes.checked) {
        isWorkingNo.checked = false;
    }
    });

    isWorkingNo.addEventListener("change", function() {
    if (isWorkingNo.checked) {
        isWorkingYes.checked = false;
    }
    });
</script>