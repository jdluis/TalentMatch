<script>
  //DOM
  const btnResume = document.getElementById('btnResume');
  const btnTech = document.getElementById('btnTech'); 
  const btnContact = document.getElementById('btnContact');

  const resumeView = document.getElementById('resumeView');
  const techStackView = document.getElementById('techStackView');
  const contactView = document.getElementById('contactView');

  //Hide View
  const hideView = (viewToHide) => {
    viewToHide.style.display = 'none';
  }

  //Switch Views
  const toggleView = (idBoton, viewContainer) => {
    idBoton.addEventListener('click', () => {

    hideView(resumeView);
    hideView(techStackView);
    hideView(contactView);
  
    // Mostrar la vista correspondiente
    viewContainer.style.display = 'block';  
  });
}

  toggleView(btnResume, resumeView);
  toggleView(btnTech, techStackView);
  toggleView(btnContact, contactView);
</script>