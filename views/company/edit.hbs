<div class=" min-h-screen flex flex-col items-center my-12 mx-4">
    <div class="w-14 h-14 text-center">
        <img class="w-full h-full object-contain rounded-full border border-green-600" src="{{companyUser.img}}" alt="{{companyUser.name}}" />
    </div>
    <div class="mt-3">
        <h1 class="text-lg inline text-green-600">{{companyUser.companyName}}</h1>
    </div>
    <form action="/company/profile/edit" method="post" enctype="multipart/form-data">
        <div class="mt-6 w-full">
            <p class="text-gray-600 min-w-full border-b border-green-600">Edit Profile</p>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="img" class="text-green-600 mb-2">Image: </label>
                <input type="file" name="img" id="img">
                <input type="text" name="existingImage" hidden value="{{companyUser.img}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="companyName" class="text-green-600 mb-2">Name: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="companyName" id="companyName" value="{{companyUser.companyName}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="email" class="text-green-600 mb-2">Email: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="email" id="email" value="{{companyUser.email}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="telephone" class="text-green-600 mb-2">Telephone: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="Number" name="telephone" id="telephone" value="{{companyUser.telephone}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="direction" class="text-green-600 mb-2">Direction: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="direction" id="direction" value="{{companyUser.direction}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="linkedin" class="text-green-600 mb-2">Linkedin: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="linkedin" id="linkedin" value="{{companyUser.linkedin}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="facebook" class="text-green-600 mb-2">Facebook: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="facebook" id="facebook" value="{{companyUser.facebook}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="twitter" class="text-green-600 mb-2">Twitter: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="twitter" id="twitter" value="{{companyUser.twitter}}">
            </div>
            <div class="flex justify-between my-4 mx-2 flex-wrap">
                <label for="website" class="text-green-600 mb-2">Website: </label>
                <input class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" type="text" name="website" id="website" value="{{companyUser.website}}">
            </div>
            <div class="flex flex-col justify-between my-4 mx-2 flex-wrap">
                <label class="text-green-600 mb-2" for="description">Description: </label>
                <textarea class="relative block appearance-none rounded-md border border-green-600 py-2 text-gray-600 placeholder-green-600 focus:z-10 focus:outline-none text-sm text-center" name="description" id="description" cols="30" rows="10">{{companyUser.description}}</textarea>
            </div>  
            <div class="flex flex-col justify-between my-4 mx-2 flex-wrap">
                <p class="text-green-600 mb-2"><span>Tech Stack:</span></p>
                <ul class="flex flex-wrap gap-4">
                {{#each selectedTechStack}}
                    <input type="checkbox" name="techStack" id="{{this}}" value="{{this}}" checked>
                    <label class="text-gray-600" for="{{this}}">{{this}}</label>
                {{/each}}
                {{#each deselectedTechStack}}
                    <input type="checkbox" name="techStack" id="{{this}}" value="{{this}}">
                    <label class="text-gray-600" for="{{this}}">{{this}}</label>
                {{/each}}
                </ul>
            </div>
                     
            <button class=" m-auto flex w-52  justify-center rounded-md border border-transparent bg-green-600 py-2 px-4 text-sm font-medium text-white focus:outline-none focus:ring-2 active:ring focus:ring-offset-2 mb-6 mt-6">Update Profile</button>
        </div>
    </form>
    <form action="/company/profile/delete" method="get">
        <button class=" flex w-52 justify-center rounded-md border border-transparent bg-red-600 py-2 px-4 text-sm font-medium text-white focus:outline-none focus:ring-2 active:ring focus:ring-offset-2">Delete Account</button>
    </form>
</div>
